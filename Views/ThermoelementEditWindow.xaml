<!--
  ThermoelementEditWindow.xaml
  Dialog window for editing a single thermoelement's channel, active state, and note.
  Contains input fields for channel ID, active toggle, note, and a save button.
-->

<Window x:Class="fcb_thermo_app.Views.ThermoelementEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Thermoelement"
        WindowStartupLocation="CenterOwner"
        Width="300"
        Height="300"
        ResizeMode="CanResize">
  <StackPanel Margin="20">
    <!-- Channel ID Input -->
    <StackPanel Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="0,0,0,8">

      <TextBlock Text="Channel ID:"
                 VerticalAlignment="Center"
                 Margin="0,0,10,0"/>
      <TextBox x:Name="ChannelIdBox"
               VerticalAlignment="Center"
               Style="{StaticResource RoundedInputStyle}">
        <TextBox.ToolTip>
          <ToolTip Style="{StaticResource RoundedTooltipStyle}">
            Enter the channel ID for this thermoelement corresponding to the channel used during the measurement.
          </ToolTip>
        </TextBox.ToolTip>
      </TextBox>
    </StackPanel>
    <!-- Active Toggle -->
    <StackPanel Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="0,0,0,8">
      <TextBlock Text="Active:"
                 VerticalAlignment="Center"
                 Margin="0,0,8,0"/>
      <ToggleButton x:Name="ActiveToggle"
                    Style="{StaticResource RoundedToggleSwitchStyle}"
                    Width="40"
                    Height="22">
        <ToggleButton.ToolTip>
          <ToolTip Style="{StaticResource RoundedTooltipStyle}">
            Toggle whether this thermoelement is active and should be considered in the measurement.
          </ToolTip>
        </ToggleButton.ToolTip>
      </ToggleButton>
    </StackPanel>
    <!-- Note Input -->
    <TextBlock Text="Note:"
               Margin="0,0,0,4"/>
    <TextBox x:Name="NoteBox"
             Height="100"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto"
             Style="{StaticResource RoundedInputStyle}">
      <TextBox.ToolTip>
        <ToolTip Style="{StaticResource RoundedTooltipStyle}">
          Add any notes or comments for this thermoelement.
        </ToolTip>
      </TextBox.ToolTip>
    </TextBox>
    <!-- Save Button -->
    <Button Content="Save"
            Margin="0,12,0,0"
            Click="Save_Click"
            HorizontalAlignment="Right"
            Width="80"
            Style="{StaticResource RoundedButtonStyle}"/>
  </StackPanel>
</Window>
