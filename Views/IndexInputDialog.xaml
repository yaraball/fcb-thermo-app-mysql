<!--
  IndexInputDialog.xaml
  Dialog window for entering or changing the index of a selected point.
  Contains a prompt, a textbox for input, and OK/Cancel buttons.
-->

<Window x:Class="fcb_thermo_app.Views.IndexInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Point Index"
        Height="150"
        Width="300"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!--- Index Input -->
    <TextBlock Grid.Row="0"
               Margin="0,0,0,10"
               Text="Enter new index for the selected point:"/>
    <TextBox x:Name="IndexTextBox"
             Grid.Row="1"
             Margin="0,0,0,10"
             PreviewKeyDown="IndexTextBox_PreviewKeyDown"/>

    <!--- Dialog Buttons -->
    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
      <Button Content="OK"
              Width="75"
              Margin="0,0,10,0"
              Click="OKButton_Click"
              IsDefault="True"/>
      <Button Content="Cancel"
              Width="75"
              Click="CancelButton_Click"
              IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>
